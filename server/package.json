{
  "name": "server",
  "version": "1.0.0",
  "description": "A nodejs backend server for kwamsc.com",
  "main": "server.ts",
  "type": "module",
  "engines": {
    "node": "24.4.1"
  },
  "imports": {
    "#*": "./src/*"
  },
  "scripts": {
    "start": "node src/server.ts",
    "dev": "node --watch --env-file .env src/server.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint --write ./src",
    "format": "biome format --write ./src",
    "test": "node --test tests/*.test.ts",
    "test:watch": "node --test --watch tests/*.test.ts",
    "test:coverage": "node --experimental-test-coverage --test tests/*.test.ts",
    "docker:start": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up --build",
    "docker:serve": "docker-compose -f docker-compose.yml -f docker-compose.dev.yml up --build",
    "dockers:exec:api": "docker exec -it kwamsc-api /bin/sh",
    "dockers:exec:firebase": "docker exec -it firebase-emulator /bin/sh",
    "firebase-export-seed": "firebase emulators:export seed",
    "firebase:emulator-start": "firebase emulators:start --import=seed"
  },
  "keywords": [],
  "author": "Kwame Carr",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/node": "^24.1.0",
    "@types/sinon": "^17.0.3",
    "@types/supertest": "6.0.2",
    "@types/swagger-ui-express": "^4.1.6",
    "sinon": "^18.0.0",
    "supertest": "^7.0.0",
    "typescript": "^5.6.2"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "firebase": "11.1.0",
    "firebase-admin": "^13.0.2",
    "helmet": "^7.2.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  }
}
